{
  "name": "asyncrush",
  "version": "1.0.0",
  "description": "A lightweight, flexible library for streaming and processing asynchronous events with ease",
  "license": "MIT",
  "author": "miinhho",
  "type": "commonjs",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "test:cov": "jest --coverage",
    "posttest:cov": "ts-node commands/open-coverage.command.ts",
